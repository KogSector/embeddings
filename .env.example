# Embeddings Service Configuration
PORT=8082
HOST=0.0.0.0
RUST_LOG=embeddings=info,tower_http=debug

# =============================================================================
# Embedding Provider API Keys (at least ONE required)
# =============================================================================

# OpenAI - text-embedding-3-small, text-embedding-3-large
# OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxx

# Cohere - embed-english-v3.0, embed-multilingual-v3.0
# COHERE_API_KEY=xxxxxxxxxxxxxxxxxxxx

# Voyage AI - voyage-3, voyage-3-large, voyage-code-3
# VOYAGE_API_KEY=pa-xxxxxxxxxxxxxxxxxxxx

# Jina AI - jina-embeddings-v3, jina-clip-v2
JINA_API_KEY=jina_xxxxxxxxxxxxxxxxxxxx

# HuggingFace - sentence-transformers models
# HUGGINGFACE_API_TOKEN=hf_xxxxxxxxxxxxxxxxxxxx

# =============================================================================
# Service Configuration
# =============================================================================

# Default embedding model (openai, cohere, voyage, jina, huggingface)
DEFAULT_PROVIDER=jina
DEFAULT_MODEL=jina-embeddings-v3

# Fusion configuration file path
FUSION_CONFIG_PATH=config/fusion_config.json

# =============================================================================
# Performance Tuning
# =============================================================================

# Embedding cache size (number of embeddings to cache)
EMBEDDING_CACHE_SIZE=10000

# Maximum concurrent embedding requests
EMBEDDING_MAX_CONCURRENCY=10

# Batch size for processing multiple texts
EMBEDDING_BATCH_SIZE=100

# Request timeout in seconds
REQUEST_TIMEOUT_SECONDS=30

# Maximum retries for failed requests
MAX_RETRIES=3

# =============================================================================
# Vector Database (Zilliz Cloud)
# =============================================================================
# ZILLIZ_ENDPOINT=https://your-instance.cloud.zilliz.com
# ZILLIZ_API_KEY=your_api_key_here
# ZILLIZ_COLLECTION=knowledge_vectors

# =============================================================================
# Service URLs (configurable for cloud deployment)
# =============================================================================
RELATION_GRAPH_SERVICE_URL=http://localhost:3018
CHUNKER_SERVICE_URL=http://localhost:3017
DATA_CONNECTOR_SERVICE_URL=http://localhost:3013
